<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="channel_all_employees" model="mail.channel">
        <field name="name">general</field>
        <field name="group_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="description">General announcements for all employees.</field>
    </record>
    <record id="module_install_notification" model="mail.message"><field name="type"/>
        <field name="model">mail.channel</field>
        <field name="res_id" ref="mail.channel_all_employees"/>
        <field name="message_type">email</field>
    </record>
    <record id="mail_followers_read_write_own" model="ir.rule">
        <field name="name">mail.followers: write its own entries</field>
        <field name="perm_read" eval="False"/>
    </record>
</odoo>
